{% extends 'base.html.twig' %}
{% block title %}Créer un compte{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1>Créer un compte</h1>

        {{ form_start(registrationForm) }}

        <div class="row">
            <div class="col-md-6">{{ form_row(registrationForm.firstName) }}</div>
            <div class="col-md-6">{{ form_row(registrationForm.lastName) }}</div>
        </div>

        <div class="row">
            <div class="col-md-4">{{ form_row(registrationForm.age) }}</div>
            <div class="col-md-4">{{ form_row(registrationForm.gender) }}</div>
            <div class="col-md-4">{{ form_row(registrationForm.phone) }}</div>
        </div>

        {{ form_row(registrationForm.address) }}

        <div class="row">
            <div class="col-md-6">{{ form_row(registrationForm.country) }}</div>
            <div class="col-md-6">{{ form_row(registrationForm.birthday) }}</div>
        </div>

        <hr class="my-3"/>

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword.first) }}
        {{ form_row(registrationForm.plainPassword.second) }}

        {{ form_rest(registrationForm) }}

        <button class="btn btn-primary mt-2">S’inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
