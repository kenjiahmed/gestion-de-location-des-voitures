{% extends 'base.html.twig' %}
{% block title %}Réserver - {{ vehicle.brand.name }} {{ vehicle.model }}{% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Réserver ce véhicule</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.debut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.fin) }}
                            </div>
                        </div>
                        
                        {{ form_row(form.notes) }}
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_vehicle_details', {id: vehicle.id}) }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-calendar-plus"></i> Confirmer la réservation
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Détails du véhicule</h4>
                    </div>
                    <div class="card-body">
                        {% if vehicle.mainImage %}
                            <img src="/images/vehicles/{{ vehicle.mainImage.filename }}" 
                                 class="img-fluid rounded mb-3" alt="{{ vehicle.mainImage.alt }}">
                        {% endif %}
                        
                        <h5>{{ vehicle.brand.name }} {{ vehicle.model }}</h5>
                        <p class="text-muted">{{ vehicle.year }} • {{ vehicle.category.name }}</p>
                        
                        <ul class="list-unstyled">
                            <li><i class="fas fa-palette"></i> {{ vehicle.color }}</li>
                            <li><i class="fas fa-users"></i> {{ vehicle.seats }} places</li>
                            <li><i class="fas fa-gas-pump"></i> {{ vehicle.fuelType|title }}</li>
                            <li><i class="fas fa-cog"></i> {{ vehicle.transmission|title }}</li>
                        </ul>
                        
                        <div class="alert alert-info">
                            <strong>Prix:</strong> {{ vehicle.pricePerDay }}€/jour
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
