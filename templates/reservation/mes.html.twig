{% extends 'base.html.twig' %}
{% block title %}Mes réservations{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Mes réservations</h1>

        {% if reservations is empty %}
            <div class="alert alert-info text-center">
                <h4>Aucune réservation</h4>
                <p>Vous n'avez pas encore de réservations.</p>
                <a href="{{ path('app_catalogue') }}" class="btn btn-primary">Voir le catalogue</a>
            </div>
        {% else %}
            <div class="row">
                {% for reservation in reservations %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            {% if reservation.vehicule.mainImage %}
                                <img src="/images/vehicles/{{ reservation.vehicule.mainImage.filename }}" 
                                     class="card-img-top" alt="{{ reservation.vehicule.mainImage.alt }}" 
                                     style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                     style="height: 200px;">
                                    <i class="fas fa-car fa-3x text-muted"></i>
                                </div>
                            {% endif %}
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ reservation.vehicule.brand.name }} {{ reservation.vehicule.model }}</h5>
                                
                                <div class="mb-2">
                                    <span class="badge 
                                        {% if reservation.statut == 'cree' %}bg-warning
                                        {% elseif reservation.statut == 'confirme' %}bg-success
                                        {% elseif reservation.statut == 'annule' %}bg-danger
                                        {% elseif reservation.statut == 'termine' %}bg-secondary
                                        {% else %}bg-info{% endif %}">
                                        {{ reservation.statut|title }}
                                    </span>
                                </div>

                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i> 
                                        {{ reservation.debut|date('d/m/Y') }} - {{ reservation.fin|date('d/m/Y') }}
                                        <br>
                                        <i class="fas fa-clock"></i> 
                                        {{ reservation.getDurationInDays }} jour(s)
                                    </small>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h6 text-success mb-0">{{ reservation.totalPrice }}€</span>
                                        <small class="text-muted">{{ reservation.createdAt|date('d/m/Y') }}</small>
                                    </div>
                                    
                                    <div class="d-grid gap-2">
                                        <a href="{{ path('app_reservation_details', {id: reservation.id}) }}" 
                                           class="btn btn-outline-primary btn-sm">Voir détails</a>
                                        
                                        {% if reservation.statut == 'cree' or reservation.statut == 'confirme' %}
                                            <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?')">
                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                    <i class="fas fa-times"></i> Annuler
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
