{% block javascripts %}
    {{ parent() }}
    <script>
        // Try to use a custom background if present at /images/home-bg.jpg, otherwise use a bundled sample image.
        document.addEventListener('DOMContentLoaded', function() {
            var heroBg = document.querySelector('.hero-image-bg');
            if (!heroBg) return;
            var preferred = '{{ asset('images/home-bg.jpg') }}';
            var fallback = '{{ asset('images/vehicles/sample-porsche-911.png') }}';

            var img = new Image();
            img.onload = function() {
                heroBg.style.backgroundImage = 'url("' + preferred + '")';
            };
            img.onerror = function() {
                heroBg.style.backgroundImage = 'url("' + fallback + '")';
            };
            // Kick off load
            img.src = preferred;
        });
    </script>
{% endblock %}
