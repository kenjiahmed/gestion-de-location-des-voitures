{% extends 'base.html.twig' %}
{% block title %}{{ vehicle.id ? 'Modifier' : 'Nouveau' }} véhicule{% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">{{ vehicle.id ? 'Modifier le véhicule' : 'Nouveau véhicule' }}</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.brand) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.model) }}
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.year) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.category) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.pricePerDay) }}
                            </div>
                        </div>
                        
                        {{ form_row(form.description) }}
                        
                        <div class="row">
                            <div class="col-md-3">
                                {{ form_row(form.color) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.fuelType) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.seats) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.transmission) }}
                            </div>
                        </div>
                        
                        <div class="form-check mb-3">
                            {{ form_widget(form.available) }}
                            {{ form_label(form.available) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_vehicles') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> {{ vehicle.id ? 'Modifier' : 'Créer' }}
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Informations</h4>
                    </div>
                    <div class="card-body">
                        <h6>Conseils pour la création de véhicules :</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Choisissez une marque existante</li>
                            <li><i class="fas fa-check text-success"></i> Renseignez tous les champs obligatoires</li>
                            <li><i class="fas fa-check text-success"></i> Vérifiez le prix par jour</li>
                            <li><i class="fas fa-check text-success"></i> Ajoutez une description attractive</li>
                        </ul>
                        
                        {% if vehicle.id %}
                            <hr>
                            <h6>Statistiques :</h6>
                            <p class="mb-1"><strong>Réservations :</strong> {{ vehicle.reservations|length }}</p>
                            <p class="mb-0"><strong>Images :</strong> {{ vehicle.images|length }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
