{% extends 'base.html.twig' %}
{% block title %}{{ vehicle.brand.name }} {{ vehicle.model }}{% endblock %}
{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <!-- Vehicle Images -->
                <div id="vehicleCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% if vehicle.images is not empty %}
                            {% for image in vehicle.images %}
                                <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                    <img src="/images/vehicles/{{ image.filename }}" 
                                         class="d-block w-100" alt="{{ image.alt }}"
                                         style="height: 400px; object-fit: cover;">
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="carousel-item active">
                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                     style="height: 400px;">
                                    <i class="fas fa-car fa-5x text-muted"></i>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    {% if vehicle.images|length > 1 %}
                        <button class="carousel-control-prev" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#vehicleCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    {% endif %}
                </div>

                <!-- Vehicle Details -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">{{ vehicle.brand.name }} {{ vehicle.model }}</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Caractéristiques</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Année:</strong> {{ vehicle.year }}</li>
                                    <li><strong>Catégorie:</strong> {{ vehicle.category.name }}</li>
                                    <li><strong>Couleur:</strong> {{ vehicle.color }}</li>
                                    <li><strong>Carburant:</strong> {{ vehicle.fuelType|title }}</li>
                                    <li><strong>Places:</strong> {{ vehicle.seats }}</li>
                                    <li><strong>Transmission:</strong> {{ vehicle.transmission|title }}</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5>Description</h5>
                                <p>{{ vehicle.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Reservation Card -->
                <div class="card sticky-top">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Réserver ce véhicule</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <span class="h3 text-success">{{ vehicle.pricePerDay }}€</span>
                            <small class="text-muted">/ jour</small>
                        </div>

                        {% if vehicle.available %}
                            {% if app.user %}
                                <a href="{{ path('app_reservation_create', {id: vehicle.id}) }}" 
                                   class="btn btn-primary btn-lg w-100 mb-3">
                                    <i class="fas fa-calendar-plus"></i> Réserver maintenant
                                </a>
                            {% else %}
                                <a href="{{ path('app_login') }}" 
                                   class="btn btn-primary btn-lg w-100 mb-3">
                                    <i class="fas fa-sign-in-alt"></i> Se connecter pour réserver
                                </a>
                            {% endif %}
                        {% else %}
                            <button class="btn btn-secondary btn-lg w-100 mb-3" disabled>
                                <i class="fas fa-times"></i> Indisponible
                            </button>
                        {% endif %}

                        <div class="alert alert-info">
                            <small>
                                <i class="fas fa-info-circle"></i>
                                <strong>Inclus:</strong> Assurance, kilométrage illimité, assistance 24h/24
                            </small>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('app_catalogue') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour au catalogue
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
