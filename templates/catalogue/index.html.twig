{% extends 'base.html.twig' %}
{% block title %}Catalogue{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Catalogue des véhicules</h1>

        <!-- Search and Filter Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_catalogue') }}">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="search" class="form-label">Rechercher</label>
                            <input type="text" class="form-control" id="search" name="search"
                                   value="{{ search }}" placeholder="Marque, modèle, catégorie...">
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="brand" class="form-label">Marque</label>
                            <select class="form-select" id="brand" name="brand">
                                <option value="">Toutes les marques</option>
                                {% for brand in brands %}
                                    <option value="{{ brand.id }}" {{ selectedBrand == brand.id ? 'selected' : '' }}>
                                        {{ brand.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="category" class="form-label">Catégorie</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">Toutes les catégories</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" {{ selectedCategory == category.id ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="min_price" class="form-label">Prix min (€)</label>
                            <input type="number" class="form-control" id="min_price" name="min_price"
                                   value="{{ minPrice }}" placeholder="0">
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="max_price" class="form-label">Prix max (€)</label>
                            <input type="number" class="form-control" id="max_price" name="max_price"
                                   value="{{ maxPrice }}" placeholder="1000">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary me-2">Filtrer</button>
                            <a href="{{ path('app_catalogue') }}" class="btn btn-outline-secondary">Réinitialiser</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results -->
        {% if vehicles.items is empty %}
            <div class="alert alert-info text-center">
                <h4>Aucun véhicule trouvé</h4>
                <p>Essayez de modifier vos critères de recherche.</p>
            </div>
        {% else %}
            <div class="row">
                {% for vehicle in vehicles %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            {% if vehicle.mainImage %}
                                <img src="/images/vehicles/{{ vehicle.mainImage.filename }}"
                                     class="card-img-top" alt="{{ vehicle.mainImage.alt }}"
                                     style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                     style="height: 200px;">
                                    <i class="fas fa-car fa-3x text-muted"></i>
                                </div>
                            {% endif %}

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ vehicle.brand.name }} {{ vehicle.model }}</h5>
                                <p class="card-text text-muted small">
                                    <i class="fas fa-calendar"></i> {{ vehicle.year }} |
                                    <i class="fas fa-users"></i> {{ vehicle.seats }} places |
                                    <i class="fas fa-palette"></i> {{ vehicle.color }}
                                </p>
                                <p class="card-text">{{ vehicle.description|slice(0, 100) }}{% if vehicle.description|length > 100 %}...{% endif %}</p>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h5 text-success mb-0">{{ vehicle.pricePerDay }}€/jour</span>
                                        <span class="badge bg-primary">{{ vehicle.category.name }}</span>
                                    </div>

                                {% if vehicle.available %}
                                        <div class="d-grid gap-2">
                                            <a href="{{ path('app_vehicle_details', {id: vehicle.id}) }}"
                                               class="btn btn-outline-primary btn-sm">Voir détails</a>
                                            {% if app.user %}
                                                <a href="{{ path('app_reservation_create', {id: vehicle.id}) }}"
                                                   class="btn btn-primary btn-sm">Réserver</a>
                                {% else %}
                                                <a href="{{ path('app_login') }}"
                                                   class="btn btn-primary btn-sm">Se connecter pour réserver</a>
                                {% endif %}
                            </div>
                                {% else %}
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            <i class="fas fa-times"></i> Indisponible
                                        </button>
                                {% endif %}

                                {# Compare button - always shown #}
                                <div class="mt-2">
                                    {% include '_vehicle_compare_button.html.twig' with {'vehicule': vehicle} %}
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(vehicles, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
            </div>
        {% endif %}
    </div>
{% endblock %}
