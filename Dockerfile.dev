# Dockerfile pour le développement et les tests
FROM php:8.3-fpm

# Installation des dépendances système en une seule couche optimisée
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libicu-dev \
    zip \
    unzip \
    libpq-dev \
    libzip-dev \
    && docker-php-ext-configure pgsql -with-pgsql=/usr/local/pgsql \
    && docker-php-ext-configure intl \
    && docker-php-ext-install pdo pdo_pgsql pgsql zip opcache intl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Installation de Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configuration PHP pour le développement
RUN mv "$PHP_INI_DIR/php.ini-development" "$PHP_INI_DIR/php.ini"
COPY docker/php/custom.ini $PHP_INI_DIR/conf.d/custom.ini

# Définition du répertoire de travail
WORKDIR /var/www/html

# Configuration utilisateur pour éviter les problèmes de permissions
RUN usermod -u 1000 www-data && groupmod -g 1000 www-data

# Exposition du port PHP-FPM
EXPOSE 9000

CMD ["php-fpm"]

